{
	"name": "atmo-sensor-lambdas",
	"version": "0.0.1",
	"description": "Post daily summaries from atmospheric sensors to social media",
	"main": "index.js",
	"scripts": {
		"build": "npm run build:mastodon && npm run build:bluesky",
		"build:mastodon": "esbuild lambdaMasto.ts --bundle --minify --sourcemap --platform=node --target=es2020 --packages=external --outfile=dist/mastodon/lambda.js",
		"build:bluesky": "esbuild lambdaAtproto.ts --bundle --minify --sourcemap --platform=node --target=es2020 --packages=external --outfile=dist/bluesky/lambda.js",
		"test": "npm run test:static",
		"test:static": "npm run test:static:tsc && npm run test:static:biome",
		"test:static:tsc": "tsc --pretty --noEmit",
		"test:static:biome": "biome check",
		"lambda:deploy:dev": "npm run build && npm run cdk:deploy:dev",
		"lambda:deploy:prod": "npm run build && npm run cdk:deploy:prod",
		"cdk:synth": "cdk synth",
		"cdk:deploy:dev": "cdk deploy --require-approval broadening",
		"cdk:deploy:prod": "DEPLOY_ENV=prod cdk deploy --require-approval broadening",
		"clean:cdk.out": "rm -rf cdk.out",
		"clean": "npm run clean:cdk.out",
		"generate:graphql:client": "graphql-codegen",
		"postinstall": "lefthook install; which git && git config blame.ignoreRevsFile .git-blame-ignore-revs; true"
	},
	"author": "Richard George <richard@phase.org>",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@graphql-codegen/cli": "^6.1.0",
		"@graphql-codegen/typescript": "^5.0.7",
		"@types/aws-lambda": "^8.10.109",
		"@types/luxon": "^3.1.0",
		"@types/node": "^24",
		"@types/suncalc": "^1.9.2",
		"@types/ws": "^8.5.8",
		"aws-cdk": "^2.221.1",
		"aws-cdk-lib": "^2.221.1",
		"aws-lambda": "^1.0.7",
		"esbuild": "0.27.2",
		"lefthook": "^2.0.13",
		"tsx": "^4.19.0",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"@apollo/client": "^4.0.11",
		"@atproto/api": "^0.18.8",
		"@ctrl/tinycolor": "^4.1.0",
		"canvas": "^3.2.0",
		"graphql": "^16.12.0",
		"luxon": "^3.1.1",
		"masto": "^7.10.0",
		"pino": "^10.1.0",
		"suncalc": "^1.9.0"
	}
}
